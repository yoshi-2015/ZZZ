<%= render 'headfoot/header' %>

<div class="container">
  <div class="row">
    <!-- サイドバー -->
    <div class="col-xs-3">
      <h1>USER EDIT</h1>

      <!-- 編集フォーマット -->
      <% if @user.errors.any? %>
        <h2><%= @user.errors.count %> errors prohibited this book from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

      <%= form_for(@user) do |f| %>

        <h4>名前</h4>
        <%= f.text_field :name %>

        <h4>画像</h4>
        <%= f.attachment_field :profile_image %>

        <h4>自己紹介</h4>
        <%= f.text_area :introduction %>

        <br><%= f.submit 'Create Book' %></br>
      <% end %>
    </div>
  </div>
<!-- footer -->
<%= render 'headfoot/footer' %>
</div>