<%= render 'headfoot/header' %>

<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= render 'memos/new', user: @user, newmemo: @newmemo %>
    </div>

    <div class="col-xs-8">
      <h2>user投稿一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>内容詳細</th>
            <th>イイね！</th>
          </tr>
        </thead>

        <tbody>
           <% @memos.each do |memo| %>
            <tr>
              <td>
                <%= link_to memo_path(memo.id) do %>
                 <%= memo.title %>
                <% end %>
              </td>
              <td>
                 <%= memo.body %>
              </td>
              <td>
                <div id="likes_buttons_<%= memo.id %>">
                  <%= render 'memos/favo', memo: memo %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= render 'headfoot/topback' %>
  <%= render 'headfoot/footer' %>
</div>