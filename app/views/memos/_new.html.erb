

<table class="table">
  <h2>ユーザー情報</h2>

  <table class="table">
    <thead>
      <tr>
        <th>
          <%= attachment_image_tag user,:profile_image, :fill, 100, 100, format: 'png', fallback: "no_image.jpg" %>
          <% if current_user != user %>
            <% if user.followed_by?(current_user) %>
                <%=link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class: "btn smoothScroll anime_test_2" %>
            <% else %>
                <%=link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn smoothScroll anime_test" %>
            <% end %>
          <% end %>
          <% if current_user == user %>
            <%=link_to "気になる人を探す", user_relationships_path(user.id), method: :delete, class: "btn smoothScroll anime_test_3" %>
          <% end %>
        </th>
      </tr>
      <tr>
        <th>名前</th>
        <th>
          <%= user.name %>
        </th>
      </tr>
      <tr>
        <th>自己紹介</th>
        <th>
          <%= user.introduction %>
        </th>
      </tr>
      <tr>
        <th>フォロー</th>
        <th>
          <%= link_to follows_user_path(user.id) do %>
            <%= user.followings.count %>
          <% end %>
        </th>
      </tr>
      <tr>
        <th>フォロワー</th>
        <th>
          <%= link_to followers_user_path(user.id) do %>
            <%= user.followers.count %>
          <% end %>
        </th>
      </tr>
    </thead>
  </table>

  <div>
    <p>
      <%= link_to 'ユーザー情報変更', edit_user_path(user), class: "btn smoothScroll anime_test_4" %>
    </p>
  </div>

  <div>
    <h2 >stady memo</h2>
    <%= form_for(@newmemo) do |f| %>

      <p>カテゴリー</p>
      <%= f.text_field :category %>

      <p>タイトル</p>
      <%= f.text_field :title %>

      <p>内容詳細</p>
      <%= f.text_area :body %>

      <br><%= f.submit 'Create Memo' %></br>
    <% end %>
  </div>
</table>